{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "allowImportingTsExtensions": true,
        "skipLibCheck": true,
        "strict": false,
        "noEmit": true,
        "incremental": true,
        "module": "esnext",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "~api/*": ["src/api/*"],
            "~app/*": ["src/app/*"],
            "~components/*": ["src/components/*"],
            "~data/*": ["src/data/*"],
            "~lib/*": ["src/lib/*"],
            "~public/*": ["public/*"],
            "~util/*": ["src/util/*"],
            "~tests/*": ["src/tests/*"]
        }
    },
    "include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
